<!DOCTYPE HTML>
<% book = get_book(req.query['book']) %>
<% prev_book = get_prev_book(book) %>
<% next_book = get_next_book(book) %>
<html>
  <head>
    <meta charset="utf-8" />
    <title>My Manga Book</title>
    <style>
      #images {
          max-width:1200px;
          width:800px;
          position:relative;
          #left:100px;
          #right:200px;
      }
      body {
          position:absolute;
          left:10%;
          right:10%;
      }
    </style>
  </head>

  <body>
    <p>My Manga Book: <%= book.dir %></p>
    <ul>
      <li>path=<%= req.path %></li>
      <li>book=<%= req.query['book'] %></li>
      <li>pwd=<%= Dir.pwd %></li>
    </ul>
    <div>
      <p>Tags: <%= book.tags.join(',') %></p>
    </div>
    <div id="images">
      <p>
        <% if prev_book %>
        <a href="view?book=<%= prev_book %>">Prev</a>
          ||  
        <% end %>
        <a href="main">Back to Main</a>
        <% if next_book %>
          ||  
        <a href="view?book=<%= next_book %>">Next</a>
        <% end %>
      </p>

      <div id="image">
        <% book.images.each do |imgfile| %>
        <img src="<%=imgfile%>"/>
        <% end %>
      </div>
    </div>
  </body>
</html>
