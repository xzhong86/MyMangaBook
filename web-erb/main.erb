<!DOCTYPE HTML>

<% books = load_books() %>

<html>
  <head>
    <meta charset="utf-8" />
  </head>
  <body>
    <p>Hello World!</p>
    <ul>
      <li>path=<%= req.path %></li>
      <li>pwd=<%= Dir.pwd %></li>
    </ul>
    <ul>
      <% books.each do |book| %>
      <li><a href="view?book=<%=book.dir%>"><%= book.title %></a>
        <%= " #{book.dir} #{book.img_files.size}P" %></li>
      <% end %>
    </ul>
  </body>
</html>
